    "@shopify/koa-shopify-auth": "^3.1.72",
    "@types/koa-session": "^5.10.3",
    "cross-env": "^5.2.0",
    "graphql": "^15.4.0",
    "graphql-request": "^3.3.0",
    "isomorphic-fetch": "^3.0.0",
    "koa": "^2.6.2",
    "koa-bodyparser": "^4.3.0",
    "koa-session": "^6.1.0",
